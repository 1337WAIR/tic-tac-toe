<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <!-- Back&Logo&Reload -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black85"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/removeGame"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/reload"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <!-- Main construction -->
    <!-- Name one box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="70dp">
            <TextView
                android:id="@+id/NamePlayerOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:textColor="@color/BlueBtn"
                android:fontFamily="@font/etna"
                android:textSize="40sp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/srcX"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
    <!-- Name two box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/NamePlayerTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:fontFamily="@font/etna"
                android:textColor="@color/BlueBtn"
                android:textSize="40sp"
                tools:ignore="RtlHardcoded" />
            <ImageView
                android:id="@+id/srcY"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right" />
        </LinearLayout>
    </LinearLayout>
    <!-- Play Box -->
    <!--Facets-->
    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="6dp"
        android:layout_above="@id/btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:background="@color/BlueBtn" />
    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:layout_below="@id/btn8"
        android:background="@color/BlueBtn"/>
    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_above="@id/btn5"
        android:background="@color/BlueBtn">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="334dp"
        android:layout_height="6dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/btn5"
        android:background="@color/BlueBtn">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="6dp"
        android:layout_height="346dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-14dp"
        android:layout_toStartOf="@id/btn5"
        android:background="@color/BlueBtn">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="6dp"
        android:layout_height="346dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7dp"
        android:layout_toStartOf="@id/btn4"
        android:background="@color/BlueBtn" />
    <RelativeLayout
        android:layout_width="6dp"
        android:layout_height="346dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_toEndOf="@id/btn6"
        android:background="@color/BlueBtn">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="6dp"
        android:layout_height="346dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-14dp"
        android:layout_toEndOf="@id/btn5"
        android:background="@color/BlueBtn">
    </RelativeLayout>
    <!--Position-->
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn1"
        android:layout_above="@+id/btn5"
        android:layout_toStartOf="@id/btn2"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/imageBtn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn2"
        android:layout_above="@+id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn2">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn3"
        android:layout_above="@+id/btn5"
        android:layout_toEndOf="@id/btn2"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn3">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn4"
        android:layout_toStartOf="@+id/btn5">

        <ImageView
            android:id="@+id/imageBtn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/imageBtn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn6"
        android:layout_toEndOf="@+id/btn5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn6">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn7"
        android:layout_below="@+id/btn5"
        android:layout_toStartOf="@id/btn8"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn7">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn8"
        android:layout_below="@+id/btn5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn8">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:id="@+id/btn9"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@id/btn8"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageBtn9">
        </ImageView>
    </RelativeLayout>
    <!-- Turn&&Score  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/black85"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/x"
                android:layout_marginEnd="20dp" />
            <TextView
                android:id="@+id/ScoreX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textColor="@color/white"
                android:fontFamily="@font/etna"
                android:layout_marginBottom="4dp"
                android:textSize="30sp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/turn_of"
            android:textColor="@color/white"
            android:fontFamily="@font/etna"
            android:layout_marginBottom="4dp"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/moveico"
            android:paddingStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:text="X"
            android:layout_weight="1"
            android:textColor="@color/BlueLight"
            android:fontFamily="@font/etna"
            android:layout_marginBottom="4dp"
            android:textSize="30sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ScoreT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:fontFamily="@font/etna"
                android:layout_marginBottom="4dp"
                android:textSize="30sp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/o"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

